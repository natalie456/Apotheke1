@model Apotheke1.Entity.Models.Medicine

<div class="container flex gap-8 p-6" style="background:#C9F7FF; min-height:100vh; font-family:Arial;">
    <div class="w-full max-w-3xl mx-auto bg-white p-6 shadow rounded">
        <div class="flex items-center gap-3 mb-6">
            <img src="/images/apotheke-logo.png" alt="logo" style="height:40px;">
            <h2 class="text-2xl font-bold">Додати новий товар</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="Create" method="post">
            <div class="mb-4">
                <a asp-controller="Medicine" asp-action="Create">Додати</a>

                <label class="block mb-1 font-semibold">Назва</label>
                <input asp-for="Name" class="w-full p-2 border rounded" />
                <span asp-validation-for="Name" class="text-red-600"></span>
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-semibold">Ціна</label>
                <input asp-for="Price" class="w-full p-2 border rounded" />
                <span asp-validation-for="Price" class="text-red-600"></span>
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-semibold">Кількість</label>
                <input asp-for="Stock" class="w-full p-2 border rounded" />
                <span asp-validation-for="Stock" class="text-red-600"></span>
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-semibold">Категорія</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="w-full p-2 border rounded"></select>
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-semibold">Постачальник</label>
                <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="w-full p-2 border rounded"></select>
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-semibold">Опис</label>
                <textarea asp-for="Description" rows="4" class="w-full p-2 border rounded"></textarea>
            </div>

            <div class="flex justify-between mt-6">
                <a asp-action="Index" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Назад</a>
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Створити</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
