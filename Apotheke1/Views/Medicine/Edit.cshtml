@model Apotheke1.Entity.Models.Medicine


<div class="min-h-screen p-8" style="background-color:#C9F7FF;">


    <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-xl p-8 border">


        <div class="flex items-center gap-3 mb-6">
            <img src="/images/apotheke-logo.png" alt="Apotheke" class="h-10" />
            <h1 class="text-2xl font-semibold text-gray-700">Редагувати товар</h1>
        </div>


        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />


            <div class="mb-4">
                <label asp-for="Name" class="block font-medium text-gray-700">Назва</label>
                <input asp-for="Name" class="w-full p-2 border rounded" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>


            <div class="mb-4">
                <label asp-for="Description" class="block font-medium text-gray-700">Опис</label>
<textarea asp-for="Description" class="w-full p-2 border rounded"></textarea>
            </div>


            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="Price" class="block font-medium text-gray-700">Ціна</label>
                    <input asp-for="Price" class="w-full p-2 border rounded" />
                </div>


                <div>
                    <label asp-for="Stock" class="block font-medium text-gray-700">Кількість</label>
                    <input asp-for="Stock" class="w-full p-2 border rounded" />
                </div>
            </div>


            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block font-medium text-gray-700">Категорія</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="w-full p-2 border rounded"></select>
                </div>


                <div>
                    <label class="block font-medium text-gray-700">Постачальник</label>
                    <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="w-full p-2 border rounded"></select>
                </div>
            </div>


            <div class="flex justify-between mt-6">
                <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">Назад</a>
                <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Зберегти</button>
            </div>
        </form>


    </div>
</div>